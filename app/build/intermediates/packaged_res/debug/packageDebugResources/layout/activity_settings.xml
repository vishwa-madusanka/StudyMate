<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".SettingsActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_settings"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="Settings"
        app:titleCentered="true"
        app:titleTextColor="@color/black"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="@color/black"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:text="Account"
                android:textStyle="bold"
                android:textColor="@color/purple_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="#F5F5F5"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingVertical="8dp">
                    <TextView
                        android:text="Edit profile"
                        android:padding="12dp"
                        android:background="?attr/selectableItemBackground"
                        android:drawablePadding="16dp"
                        android:gravity="center_vertical"
                        app:drawableTint="@color/purple_button"
                        app:drawableStartCompat="@drawable/ic_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="Security"
                        android:padding="12dp"
                        android:background="?attr/selectableItemBackground"
                        android:drawablePadding="16dp"
                        android:gravity="center_vertical"
                        app:drawableTint="@color/purple_button"
                        app:drawableStartCompat="@drawable/ic_security"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="Notifications"
                        android:padding="12dp"
                        android:background="?attr/selectableItemBackground"
                        android:drawablePadding="16dp"
                        android:gravity="center_vertical"
                        app:drawableTint="@color/purple_button"
                        app:drawableStartCompat="@drawable/ic_notifications"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="Privacy"
                        android:padding="12dp"
                        android:background="?attr/selectableItemBackground"
                        android:drawablePadding="16dp"
                        android:gravity="center_vertical"
                        app:drawableTint="@color/purple_button"
                        app:drawableStartCompat="@drawable/ic_privacy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:text="Support &amp; About"
                android:textStyle="bold"
                android:textColor="@color/purple_button"
                android:layout_marginTop="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="#F5F5F5"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingVertical="8dp">
                    <TextView
                        android:text="My Subscription"
                        android:padding="12dp"
                        android:background="?attr/selectableItemBackground"
                        android:drawablePadding="16dp"
                        android:gravity="center_vertical"
                        app:drawableTint="@color/purple_button"
                        app:drawableStartCompat="@drawable/ic_subscription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="Help &amp; Support"
                        android:padding="12dp"
                        android:background="?attr/selectableItemBackground"
                        android:drawablePadding="16dp"
                        android:gravity="center_vertical"
                        app:drawableTint="@color/purple_button"
                        app:drawableStartCompat="@drawable/ic_help"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="Terms and Policies"
                        android:padding="12dp"
                        android:background="?attr/selectableItemBackground"
                        android:drawablePadding="16dp"
                        android:gravity="center_vertical"
                        app:drawableTint="@color/purple_button"
                        app:drawableStartCompat="@drawable/ic_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:text="Actions"
                android:textStyle="bold"
                android:textColor="@color/purple_button"
                android:layout_marginTop="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="#F5F5F5"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingVertical="8dp">
                    <TextView
                        android:text="Report a problem"
                        android:padding="12dp"
                        android:background="?attr/selectableItemBackground"
                        android:drawablePadding="16dp"
                        android:gravity="center_vertical"
                        app:drawableTint="@color/purple_button"
                        app:drawableStartCompat="@drawable/ic_report_problem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="Add account"
                        android:padding="12dp"
                        android:background="?attr/selectableItemBackground"
                        android:drawablePadding="16dp"
                        android:gravity="center_vertical"
                        app:drawableTint="@color/purple_button"
                        app:drawableStartCompat="@drawable/ic_add_account"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_logout"
                        android:text="Log out"
                        android:padding="12dp"
                        android:background="?attr/selectableItemBackground"
                        android:drawablePadding="16dp"
                        android:gravity="center_vertical"
                        app:drawableTint="@color/purple_button"
                        app:drawableStartCompat="@drawable/ic_logout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>